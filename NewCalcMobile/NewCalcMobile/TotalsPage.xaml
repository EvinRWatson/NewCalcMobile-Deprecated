<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NewCalcMobile.TotalsPage">
    <ContentPage.Content>
        <StackLayout>
            
            <Frame BackgroundColor="Black" Padding="24" CornerRadius="0">
                <Label Text="Totals:" HorizontalTextAlignment="Center" TextColor="White" BackgroundColor="Black" FontSize="36"/>
            </Frame>
            
            <Label x:Name="NumElementLabel"/>
            
            <Label x:Name="TotalNEWLabel"/>
            
            <Label x:Name="wCoverLabel"/>

            <Label x:Name="woCoverLabel"/>

            <Label x:Name="OverPressureLabel"/>

            <Label x:Name="LightFragLabel"/>

            <Label x:Name="HeavyFragLabel"/>

            <Button Text="Start Over" Clicked="StartApp"/>
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>