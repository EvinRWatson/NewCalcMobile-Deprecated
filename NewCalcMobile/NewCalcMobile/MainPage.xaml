<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NewCalcMobile.MainPage">

    <StackLayout>
        <Frame BackgroundColor="Black" Padding="24" CornerRadius="0">
            <Label Text="NewCalcMobile" HorizontalTextAlignment="Center" TextColor="White" BackgroundColor="Black" FontSize="36"/>
        </Frame> 
        
            <Label Text="Weight (Lbs) or Grain Density: " Padding="30,10,30,10"/>
            <Entry Keyboard="Numeric" Completed="SetWeight"/>

            <Label Text="Quantity" Padding="30,10,30,10"/>
            <Entry Keyboard="Numeric" Completed="SetQuantity"/>

            <Label Text="REF" Padding="30,10,30,10"/>
            <Entry Keyboard="Numeric" Completed="SetREF"/>

            <Label Text="Grain?" Padding="30,10,30,10"/>
            <Switch IsToggled="False" Toggled="SwitchSetIsGrain"/>

            <Button Text="Add Element" Clicked="AddElement"/>

            <Label/>

            <Label x:Name="ShowNumElements" Padding="30,10,30,10"/>

            <Button Text="Finish and Calculate Standoff" Clicked="ShowTotals"/>
        
    </StackLayout>

</ContentPage>